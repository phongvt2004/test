<div class='mt-4'>
    <div class='row' id="id">
        {{user._id}}
    </div>
    <div class='row' id="username">
        {{user.username}}
    </div>
</div>
<script type='text/javascript'>

    localStorage.setItem('userId', document.querySelector('#id').textContent.trim())
    localStorage.setItem('username', document.querySelector('#username').textContent.trim())
    let userId = localStorage.getItem('userId')
    let links = document.querySelectorAll('.redirect')
    links.forEach(((link, index) => {
        currentLink = link.getAttribute('href')
        document.querySelectorAll('.redirect')[index].setAttribute('href', `${currentLink}/${userId}`)
    }))
</script>